<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="styListDate" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#900000</item>
    </style>
    <style name="detailTitle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#002080</item>
    </style>
    <style name="appwToday" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#d00000</item>
    </style>
    <style name="appwTotal" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#000000</item>
    </style>
    <color name="black">#000000</color>
    <color name="white">#ffffff</color>
    <color name="gray">#E0E0E0</color>

</resources>
